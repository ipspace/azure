#!/bin/bash
RG=`cat ~/.rg 2>/dev/null`
RG=${RG:-Test}
echo "Create VM A with default settings in resource group $RG"
#
set -x
az vm create \
 --resource-group $RG \
 --name A \
 --image UbuntuLTS \
 --admin-username azure \
 --public-ip-address A_Public \
 --public-ip-address-allocation static \
 --ssh-key-value ~/.ssh/id_rsa.pub
